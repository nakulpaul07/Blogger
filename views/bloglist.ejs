<%- include('./header.ejs') %>

  <h1 class="text-center mt-3 mb-4">All Blogs</h1>

  <div class="container">
    <div class="row">
      <% d.forEach((item)=> { %>
        <div class="col-md-4">
          <div class="blog-box">
            <img data-aos="flip-left" data-aos-easing="ease-out-cubic" data-aos-duration="1000"
              src="<%= item.image.url %>" style="height: 4cm; width: 7cm; " alt="">
            <h3>
              <%= item.title %>
            </h3>
            <!-- <p>by <span>RSGiTECH</span> on <span>October 22, 2018</span></p> -->
            <p>
              <%= item.description %>
            </p>
            <a href="/detail/<%= item._id %>" class="btn btn-danger">Read more...</a>
          </div>
        </div>

        <% }) %>

    </div>
  </div>

  <footer>
    <div class="container">
      <div class="copyright">
        <div>Designed by RSGiTECH</div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap core JavaScript
    ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="assets/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js">
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init();
  </script>
  </body>

  </html>